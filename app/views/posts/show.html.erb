<p id="notice"><%= notice %></p>

<div class="container">

  <div class="header">

    <h3>
      <%= @post.heading %>
    </h3>

     <p>
      <%= link_to @post.external_url, @post.external_url %>
    </p>

  </div>


  <div class="row">
    <div id="post-images" class="col-md-7">
      <% if @images.blank? %>
        <%= image_tag "default.jpg", class: "thumbnail" %>
      <% else %>
        <% @images.each do |image| %>
          <%= image_tag image.url, class: "thumbnail" %>
        <% end %>
      <% end %>
    </div>

    <div class="col-md-5">

        <div class="basic-info">
          <h4>Basic Info</h4>

          Price: <%= number_to_currency(@post.price, precision: 0) %><br>
          Last Updated: <%= "#{time_ago_in_words(Time.at(@post.timestamp.to_i))} ago" %><br>

          <% if @post.neighborhood.present? %>
            Neighborhood: <%= @post.neighborhood %><br>
          <% end %>

          Bedrooms: <%= @post.bedrooms %><br>
          Bathrooms: <%= @post.bathrooms %><br>
          Square Feet: <%= @post.sqft %><br>
          Cats: <%= @post.cats %><br>
          Dogs: <%= @post.dogs %><br>
          Washer and Dryer?: <%= @post.w_d_in_unit %><br>
          Street Parking: <%= @post.street_parking %><br>

        </div>

        <div class="description">
          <h4>Description</h4>
          Description: <%= @post.body %><br>
        </div>
        

    </div>
  </div>

</div>
